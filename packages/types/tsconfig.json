{
    "compilerOptions": {
      "composite": false,
      "declaration": true,
      "declarationMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "inlineSources": false,
      "isolatedModules": true,
      "moduleResolution": "node",
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "preserveWatchOutput": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "esnext",
      "lib": ["ES2015"],
      "module": "CommonJS",
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "exclude": ["node_modules"],
    "include": ["src"]
  }